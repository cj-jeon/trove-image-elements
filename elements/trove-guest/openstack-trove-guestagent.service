[Unit]
Description=OpenStack Trove Guest
After=syslog.target network.target cloud-init.service

[Service]
Type=simple
User=trove
ExecStart=/usr/bin/trove-guestagent --config-file /etc/trove/trove-guestagent.conf --config-file /etc/trove/guest_info.conf
Restart=on-failure

[Install]
WantedBy=multi-user.target
